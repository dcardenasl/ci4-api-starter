#--------------------------------------------------------------------
# Docker Environment Configuration Example
#
# Copy this file to .env.docker and customize the values.
# NEVER commit .env.docker to git - it contains sensitive credentials!
#
# Command: cp .env.docker.example .env.docker
#
# Note: Some values are overridden by docker-compose.yml
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

app.baseURL = 'http://localhost:8080'
# app.forceGlobalSecureRequests = false
# app.CSPEnabled = false

#--------------------------------------------------------------------
# DATABASE - Docker Container
#--------------------------------------------------------------------

# These values should match docker-compose.yml
database.default.hostname = db
database.default.database = ci4_api
database.default.username = ci4_user
database.default.password = CHANGE_THIS_PASSWORD
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306
database.default.charset = utf8mb4
database.default.DBCollat = utf8mb4_general_ci

# Test database (optional)
database.tests.hostname = db
database.tests.database = ci4_test
database.tests.username = ci4_user
database.tests.password = CHANGE_THIS_PASSWORD
database.tests.DBDriver = MySQLi
database.tests.DBPrefix = test_
database.tests.charset = utf8mb4
database.tests.DBCollat = utf8mb4_general_ci
database.tests.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# CRITICAL: Generate a secure key for production!
# Run: php spark key:generate
encryption.key = ''

#--------------------------------------------------------------------
# JWT AUTHENTICATION
#--------------------------------------------------------------------

# CRITICAL: Change this to a strong random value in production!
# Generate with: openssl rand -base64 64
JWT_SECRET_KEY = ''

#--------------------------------------------------------------------
# DOCKER MYSQL CREDENTIALS
#--------------------------------------------------------------------

# These should match the values in docker-compose.yml
MYSQL_ROOT_PASSWORD = CHANGE_THIS_ROOT_PASSWORD
MYSQL_DATABASE = ci4_api
MYSQL_USER = ci4_user
MYSQL_PASSWORD = CHANGE_THIS_PASSWORD

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

# session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
# session.savePath = null

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

logger.threshold = 4

#--------------------------------------------------------------------
# SECURITY (Production)
