{
    "name": "ci4/api-starter",
    "description": "CodeIgniter 4 API Starter Kit with Layered Architecture",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "aws/aws-sdk-php": "^3.369",
        "codeigniter4/framework": "^4.5",
        "firebase/php-jwt": "^7.0",
        "google/apiclient": "^2.17",
        "league/flysystem": "^3.31",
        "league/flysystem-aws-s3-v3": "^3.31",
        "monolog/monolog": "^3.5",
        "sentry/sentry": "^4.6",
        "symfony/mailer": "^6.4",
        "zircote/swagger-php": "^6.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9",
        "friendsofphp/php-cs-fixer": "^3.48",
        "mikey179/vfsstream": "^1.6",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.5.16"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Config\\": "app/Config/"
        },
        "exclude-from-classmap": [
            "**/Database/Migrations/**"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test:prepare-db": "php spark tests:prepare-db",
        "test:unit": [
            "@test:prepare-db",
            "phpunit --testsuite=Unit --configuration=phpunit.xml --no-coverage --testdox"
        ],
        "test:integration": [
            "@test:prepare-db",
            "phpunit --testsuite=Integration --configuration=phpunit.xml --no-coverage --testdox"
        ],
        "test:feature": [
            "@test:prepare-db",
            "phpunit --testsuite=Feature --configuration=phpunit.xml --no-coverage --testdox"
        ],
        "test": [
            "@test:prepare-db",
            "phpunit --configuration=phpunit.xml --no-coverage --testdox"
        ],
        "phpstan": "phpstan analyse --memory-limit=512M",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff --sequential",
        "i18n-check": "php scripts/i18n-check.php",
        "docs-i18n-check": "php scripts/docs-i18n-parity-check.php",
        "quality": [
            "@cs-check",
            "@phpstan",
            "@i18n-check",
            "@docs-i18n-check",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
