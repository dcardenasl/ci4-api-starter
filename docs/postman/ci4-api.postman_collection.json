{
  "info": {
    "name": "CI4 API - Full",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Full API collection generated from OpenAPI. Update by regenerating swagger.json and exporting to Postman."
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "accessToken", "value": "" },
    { "key": "refreshToken", "value": "" },
    { "key": "userId", "value": "" },
    { "key": "fileId", "value": "" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{accessToken}}", "type": "string" }
    ]
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Health",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": "{{baseUrl}}/health"
          }
        },
        {
          "name": "Ping",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": "{{baseUrl}}/ping"
          }
        },
        {
          "name": "Ready",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": "{{baseUrl}}/ready"
          }
        },
        {
          "name": "Live",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": "{{baseUrl}}/live"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"ValidPass123!\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/register"
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"ValidPass123!\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/login"
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/auth/me"
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/refresh"
          }
        },
        {
          "name": "Revoke",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh_token\": \"{{refreshToken}}\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/revoke"
          }
        },
        {
          "name": "Revoke All",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/auth/revoke-all"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/forgot-password"
          }
        },
        {
          "name": "Validate Reset Token",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": "{{baseUrl}}/api/v1/auth/validate-reset-token?token=REPLACE_ME&email=user%40example.com"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"token\": \"REPLACE_ME\",\n  \"password\": \"NewPass123!\",\n  \"password_confirmation\": \"NewPass123!\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/reset-password"
          }
        },
        {
          "name": "Verify Email (GET)",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": "{{baseUrl}}/api/v1/auth/verify-email?token=REPLACE_ME&email=user%40example.com"
          }
        },
        {
          "name": "Verify Email (POST)",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"token\": \"REPLACE_ME\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/auth/verify-email"
          }
        },
        {
          "name": "Resend Verification",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/auth/resend-verification"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users"
          }
        },
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/users/{{userId}}"
          }
        },
        {
          "name": "Create User (Admin)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"ValidPass123!\",\n  \"role\": \"user\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/users"
          }
        },
        {
          "name": "Update User (Admin)",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"first_name\": \"Updated\"\n}"
            },
            "url": "{{baseUrl}}/api/v1/users/{{userId}}"
          }
        },
        {
          "name": "Delete User (Admin)",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/v1/users/{{userId}}"
          }
        },
        {
          "name": "Approve User (Admin)",
          "request": {
            "method": "POST",
            "url": "{{baseUrl}}/api/v1/users/{{userId}}/approve"
          }
        }
      ]
    },
    {
      "name": "Files",
      "item": [
        {
          "name": "List Files",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/files"
          }
        },
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "body": {
              "mode": "formdata",
              "formdata": [
                { "key": "file", "type": "file", "src": "" }
              ]
            },
            "url": "{{baseUrl}}/api/v1/files/upload"
          }
        },
        {
          "name": "Get File",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/files/{{fileId}}"
          }
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "url": "{{baseUrl}}/api/v1/files/{{fileId}}"
          }
        }
      ]
    },
    {
      "name": "Metrics (Admin)",
      "item": [
        {
          "name": "Metrics Overview",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/metrics"
          }
        },
        {
          "name": "Request Stats",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/metrics/requests"
          }
        },
        {
          "name": "Slow Requests",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/metrics/slow-requests"
          }
        },
        {
          "name": "Custom Metrics",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/metrics/custom/example"
          }
        },
        {
          "name": "Record Metric",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"example\",\n  \"value\": 1.5,\n  \"tags\": {\n    \"env\": \"local\"\n  }\n}"
            },
            "url": "{{baseUrl}}/api/v1/metrics/record"
          }
        }
      ]
    },
    {
      "name": "Audit (Admin)",
      "item": [
        {
          "name": "List Audit Logs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/audit"
          }
        },
        {
          "name": "Get Audit Log",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/audit/1"
          }
        },
        {
          "name": "Audit Logs By Entity",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/v1/audit/entity/user/{{userId}}"
          }
        }
      ]
    }
  ]
}
